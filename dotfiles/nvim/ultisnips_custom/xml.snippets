snippet sequence "sequence" m
<!-- ${1/_/\./g} sequence -->

<record id="sequence_type_${1:my_model}" model="ir.sequence.type">
  <field name="name">${2:MyModel}</field>
  <field name="code">${1/_/\./g}</field>
</record>

<record id="sequence_$1" model="ir.sequence">
  <field name="name">$2</field>
  <field name="code">${1/_/\./g}</field>
  <field name="prefix">%(year)s-</field>
  <field name="padding" eval="${3:3}"/>
  <field name="number_next">${4:000}</field>
  <field name="number_increment">1</field>
</record>
endsnippet

snippet cron "ir.cron >= 11"
<record model="ir.cron" id="cron_$1">
  <field name='name'>${2:Name}</field>
  <field name='interval_number'>${3:1}</field>
  <field name='interval_type'>${4:days}</field>
  <field name="numbercall">${5:-1}</field>
  <field name="active" eval="True"/>
  <field name="doall" eval="${6:False}" />
  <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 00:00:00')"/>
  <field name="model_id" ref="${7:module}.model_${8:res_partner}"/>
  <field name="state">code</field>
  <field name="code">model.${9:method_to_call}()</field>
</record>
endsnippet

snippet cron "ir.cron Odoo <= 10"
<record model="ir.cron" id="cron_$1">
  <field name='name'>${2:Name}</field>
  <field name='interval_number'>${3:1}</field>
  <field name='interval_type'>${4:days}</field>
  <field name="numbercall">${5:-1}</field>
  <field name="active" eval="True"/>
  <field name="doall" eval="${6:False}" />
  <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 00:00:00')"/>
  <field name="model">${7:res.partner}</field>
  <field name="function">${8:method_to_call}</field>
  <field name="args">${9:()}</field>
</record>
endsnippet
