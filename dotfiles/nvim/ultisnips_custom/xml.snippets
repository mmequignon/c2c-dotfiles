  <field name="name">${2:Record rule name}</field>
  <field name="model_id" ref="${3:module}.model_${4:model_name}"/>${6:
  <field name="domain_force">[(${5:applied domain})]</field>}${8:
  <field name="groups" eval="[(4, ref('${7:xmlid}'), 0)]"/>}${9:
  <field name="perm_create" eval="1"/>}${10:
  <field name="perm_read" eval="1"/>}${11:
  <field name="perm_write" eval="1"/>}${12:
  <field name="perm_unlink" eval="1"/>}
  $13
</record>
endsnippet

