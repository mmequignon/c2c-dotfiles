snippet viewf "Form View"
<record id="${1:model_name}_view_form" model="ir.ui.view">
  <field name="name">${1/_/\./g}.form</field>
  <field name="model">${1/_/\./g}</field>
  <field name="arch" type="xml">
    <form string="$2" ${3:version="7.0"}>${4:
      <header>
        $5
      </header>}
      <sheet>
        $6
      </sheet>${7:
      <footer>
        $8
      </footer>}
    </form>
  </field>
</record>
endsnippet

snippet vieww "Wizard View"
<record id="${1:model_name}_form" model="ir.ui.view">
  <field name="name">${1/_/\./g}.form</field>
  <field name="model">${1/_/\./g}</field>
  <field name="arch" type="xml">
    <form string="$2">
      <sheet>
        $4
      </sheet>
      <footer>
        <button name="${5:validate}" type="object"
          string="${6:Validate}" class="btn-primary"/>
        <button special="cancel" string="${7:Cancel}" class="btn-default"/>
      </footer>
    </form>
  </field>
</record>
endsnippet

